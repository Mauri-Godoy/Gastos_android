<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="welcome_msg">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">italic</item>
        <item name="android:textSize">@dimen/text_xl2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="subtitle">
        <item name="android:gravity">center</item>
        <item name="fontStyle">italic</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle.white" parent="subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="welcome_input">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">italic</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn.white" parent="btn">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="btn.primary" parent="btn">
        <item name="android:background">@drawable/rounded_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="paddingStart">@dimen/margin_md</item>
        <item name="paddingEnd">@dimen/margin_md</item>
    </style>
</resources>