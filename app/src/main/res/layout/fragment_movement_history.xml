<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gui.fragments.MovementHistoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movementList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_total"
        app:layout_constraintTop_toBottomOf="@id/layout_datePicker" />

    <TextView
        android:id="@+id/tv_movementListEmpty"
        android:text="@string/movementListEmpty"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_datePicker" />

    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:orientation="horizontal"
        android:padding="@dimen/margin_sm"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/subtitle.white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_sm"
            android:gravity="start"
            android:text="TOTAL"
            app:drawableStartCompat="@drawable/ic_account_balance"
            app:drawableTint="@color/white" />

        <TextView
            android:id="@+id/tv_total"
            style="@style/subtitle.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_sm"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_dateFrom"
            style="@style/btn.secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="@dimen/margin_xxsm"
            tools:text="23/09/2023" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_dateFrom"
            android:src="@drawable/ic_navigate_next"
            app:tint="@color/secondary"
            android:contentDescription="ic_next" />

        <Button
            android:id="@+id/btn_dateTo"
            style="@style/btn.secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_next"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="@dimen/margin_xxsm"
            tools:text="23/09/2023" />


        <ImageButton
            style="@style/btn.primary"
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_dateFrom"
            android:layout_alignBottom="@id/btn_dateFrom"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search"
            android:contentDescription="btn_search" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>